<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectKeyword"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키워드를 선택해주세요."
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="24dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="ExtraText">
        <EditText
            android:id="@+id/edit_Keyword1"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="text"/>
            <Button
                android:id="@+id/save_Keyword1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/sel_Keyword1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textSize="20dp"/>
        </LinearLayout> <!--1번 키워드-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="ExtraText">
            <EditText
                android:id="@+id/edit_Keyword2"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"/>
            <Button
                android:id="@+id/save_Keyword2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/sel_Keyword2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textSize="20dp"/>
        </LinearLayout> <!--2번 키워드-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="ExtraText">
            <EditText
                android:id="@+id/edit_Keyword3"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:inputType="text"/>
            <Button
                android:id="@+id/save_Keyword3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/sel_Keyword3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="선택"
                android:textSize="20dp"/>
        </LinearLayout> <!--3번 키워드-->

    </LinearLayout>

</LinearLayout>